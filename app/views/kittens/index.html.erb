<h3 class="is-size-3">Kitten Data</h3>
<%= link_to 'Create New', new_kitten_path, class: 'button' %>
<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>ID</th>    
            <th>Name</th>
            <th>Age</th>
            <th>Cuteness</th>
            <th>Softness</th>
            <th>Open</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        <% @kittens.each do |kitten| %>
            <tr>
                <th><%= kitten.id %></th>
                <th><%= kitten.name%></th>
                <th><%= kitten.age%></th>
                <th><%= kitten.cuteness %></th>
                <th><%= kitten.softness%></th>
                <th><%= link_to 'Info', kitten, class: 'button' %></th>
                <th><%= link_to 'Edit',  edit_kitten_path(kitten), class: 'button' %></th>
                <th><%= link_to 'Delete', kitten, method: :delete, class: 'button' %></th>
            </tr>
        <% end %>
    </thead>
</table>